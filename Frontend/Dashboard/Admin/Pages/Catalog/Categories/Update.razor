@page "/update-category/{id}"
@using Admin.Models;
@using Admin.Services;

<section class="content-main">
    <div class="row">
        <EditForm Model="_category" OnSubmit="UpdateCategory">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Update Category</h2>
                    <div>
                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Update</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">Category title</label>
                            <input type="text" placeholder="Type here" class="form-control" @bind="_category.Name">
                        </div>
                    </div>
                </div> <!-- card end// -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">Images</label>
                            <input class="form-control" type="file">
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
        </EditForm>
    </div>
</section>

@code {
	private Category _category;
	[Inject]
	private CategoryRepository CategoryService { get; set; }
	[Parameter]
	public String Id { get; set; }

	[Inject]
	public NavigationManager NavigationManager { get; set; }

	protected async override Task OnInitializedAsync()
	{
		_category = await CategoryService.Get("Categories", Convert.ToInt32(Id));
	}

	public async Task UpdateCategory()
	{
		await CategoryService.Update("Categories", _category);
		NavigationManager.NavigateTo("/Categories");
	}
}
